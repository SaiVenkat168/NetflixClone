<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ChooseYourPlan">
    <include
        layout="@layout/toolbarstepone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:text="Plan Expried!.\nSelect new Plan"
                android:textColor="#000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/a"
                android:text="Downgrade or upgrade at any time."
                android:textColor="#000"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="300dp"
                android:id="@+id/bas"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/b"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:backgroundTint="#0097A7"
                        android:id="@+id/radiobtnforbasic1"/>
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Basic"
                        android:id="@+id/ba"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 349/month"
                    android:textSize="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"

                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_marginTop="68dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/basicplanimg"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="300dp"
                android:id="@+id/sta"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/bas"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:backgroundTint="#0097A7"
                        android:layout_height="33dp"
                        android:id="@+id/radiobtnforstandard1"/>
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Standard"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 649/month"
                    android:textSize="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="38dp"

                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_marginTop="68dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/standardplanimg"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="300dp"
                android:id="@+id/pre"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/sta"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:backgroundTint="#0097A7"
                        android:id="@+id/radiobtnforpremium1"/>
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Premium"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="₹ 999/month"
                    android:textSize="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"

                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_marginTop="68dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/premiumplanimg"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/paybtn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@id/pre"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"
                android:gravity="center"
                android:text="PAY"
                android:textColor="@color/white"
                android:textSize="20dp" />



        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>