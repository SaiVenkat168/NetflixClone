<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.FinishUpAccount">
    <include
        layout="@layout/toolbarstepone"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/a"
            android:src="@drawable/ic_baseline_check_circle_outline_24"/>

        <TextView
            android:id="@+id/steponeofthreefinish"
            android:layout_width="396dp"
            android:layout_height="40dp"
            android:layout_below="@id/a"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="STEP 1 OF 3"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/steponeofthreefinish"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="Finish Setting up your account"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_below="@id/b"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/c"
            android:text="Netflix is Personalised for you. Create
a password to watch netflix on
any device at any time"
            android:textColor="#000"
            android:textSize="25dp" />
        
        <TextView
            android:id="@+id/continuetextviewfinishupaccount"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="continue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_below="@id/c"
            android:background="@color/teal_200"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>