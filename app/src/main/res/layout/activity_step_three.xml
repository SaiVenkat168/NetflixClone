<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StepThree">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbarstepthree" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:id="@+id/a"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="189dp"
            android:gravity="center"
            android:layout_height="126dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_lock_24"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="187dp"
                android:layout_height="122dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_radio_button_unchecked_24"/>

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/step3of3"
            android:layout_width="175dp"
            android:layout_height="41dp"
            android:layout_below="@id/a"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="10dp"
            android:text="STEP 3 OF 3"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25dp" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/b"
            android:layout_below="@id/step3of3"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="13dp"
            android:text="Step your payment"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="240dp"
            android:id="@+id/c"
            android:layout_below="@id/b"
            android:layout_height="74dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:text="Your membership starts as soon as you set up payment."
            android:textColor="#4E4D4D"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@id/c"
            android:layout_width="253dp"
            android:layout_height="79dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:text="No Commitments.
Cancel at any time"
            android:id="@+id/d"
            android:gravity="center"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_below="@id/d"
            android:id="@+id/paymentlinearlayout"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="70dp"
            android:orientation="horizontal"
            android:background="@drawable/btn_stroke">
            <TextView
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Credit or Debit card"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="15dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/master"
                android:gravity="center"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/visa"
                android:gravity="center"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/americanexp"
                android:gravity="center"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/rupay"
                android:gravity="center"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>